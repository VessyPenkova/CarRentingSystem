@using CarRentingSystem.Core.Extensions
@using CarRentingSystem.Core.Models.CarRoute
@model CarRouteServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrlRouteGoogleMaps" alt="CarRoute Marshrut">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Address: <b>@Model.PickUpAddress</b></h6>
            <h6>Address: <b>@Model.DeliveryAddress</b></h6>
            <h6>
                Price:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <h6>(@(Model.IsRented ? "Rented" : "Not Rented"))</h6>
            <br />
            <a asp-area="" asp-controller="CarRoute" asp-action="Details" asp-route-id="@Model.CarRouteId"
               asp-route-information="@Model.GetInformation()" class="btn btn-success">Details</a>
            @if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="CarRoute" asp-action="Edit" asp-route-id="@Model.CarRouteId"
               class="btn btn-warning">Edit</a>
                <a asp-area="" asp-controller="CarRoute" asp-action="Delete" asp-route-id="@Model.CarRouteId"
               class="btn btn-danger">Delete</a>
                <p></p>
                @if (!Model.IsRented)
                {
                    <form class="input-group-sm" asp-area="" asp-controller="CarRoute"
                  asp-action="Rent" asp-route-id="@Model.CarRouteId" method="post">
                        <input class="btn btn-primary" type="submit" value="Rent" />
                    </form>
                }
                else
                {
                    <form asp-area="" asp-controller="CarRoute" asp-action="Leave"
                  asp-route-id="@Model.CarRouteId" method="post">
                        <input class="btn btn-primary" type="submit" value="Leave" />
                    </form>
                }
            }
        </div>
    </div>
</div>