@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5" style="background-color: #09223c; color: #ffd500;">
    <h2 style="background-color: #09223c; color: #ffd500;"  class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3" style="background-color: #09223c; color: #ffd500;">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> Shipments.
        <br />You can <b>rent</b> and <b>leave</b> the free ones, too!
    </p>

    <p class="lead mt-1" style="background-color: #09223c; color: #ffd500;">
        You can also see <b>all users and shipments</b> and <b>All bookings</b> in the system.
    </p>

    <hr class="my-4" style="background-color: #09223c; color: #ffd500;">
    <a asp-area=""   style="background-color: #09223c; color: #ffd500;" asp-controller="Shipments" asp-action="All"
      class="button">All Shipments</a>
    <a asp-area=""   style="background-color: #09223c; color: #ffd500;" asp-controller="Shipments" asp-action="Add"
       class="btn style="background-color: #09223c; color: #ffd500;">Add Shipment</a>
    <span>  |   </span>
    <a asp-area="Admin" style="background-color: #09223c; color: #ffd500;"  asp-controller="Shipments" asp-action="Mine"
       class="btn style="background-color: #09223c; color: #ffd500;">My Shipments</a>
    <span>  |   </span>
    <a asp-area="Admin" style="background-color: #09223c; color: #ffd500;" asp-controller="Rents" asp-action="All"
       class="btn style="background-color: #09223c; color: #ffd500;">All Bookings</a>
    <a asp-area="Admin" style="background-color: #09223c; color: #ffd500;"  asp-controller="Users" asp-action="All"
       class="btn style="background-color: #09223c; color: #ffd500;">All Users</a>

</div>