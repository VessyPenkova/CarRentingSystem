@using CarRentingSystem.Core.Models.CarRoute﻿
@model CarRouteModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="background-color: #09223c">
        <form method="post">
            <div class="form-group" style="color:  #ffd500;" style=" background-color: #09223c">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;" >
                <label asp-for="PickUpAddress"></label>
                <input asp-for="PickUpAddress" class="form-control" placeholder="PickUpAddress...">
                <span asp-validation-for="PickUpAddress" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;">
                <label asp-for="DeliveryAddress"></label>
                <input asp-for="DeliveryAddress" class="form-control" placeholder="DeliveryAddress...">
                <span asp-validation-for="DeliveryAddress" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Luxury or ..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;">
                <label asp-for="ImageUrlRouteGoogleMaps"></label>
                <input asp-for="ImageUrlRouteGoogleMaps" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrlRouteGoogleMaps" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color:  #ffd500;">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" style=" background-color: #09223c">
                    @foreach (var category in Model.CarRouteCategories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="text-center" style=" background-color: #09223c">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>