@using CarRentingSystem.Core.Models.Shipment
@model ShipmentDetailsViewModel

@{
    ViewBag.Title = "Delete Shipment";
}

<h2 class="text-center" style="color: yellow;">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrlShipmentGoogleMapsUrl" alt="Shipment Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Title" class="control-label" style="color: yellow;"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" style="background-color: lightgray; color: black;" />
            </div>
            <div class="form-group">
                <label asp-for="LoadingAddress" class="control-label" style="color: yellow;"></label>
                <input asp-for="LoadingAddress" class="form-control" disabled="disabled" style="background-color: lightgray; color: black;" />
            </div>
            <div class="form-group">
                <label asp-for="DeliveryAddress" class="control-label" style="color: yellow;"></label>
                <input asp-for="DeliveryAddress" class="form-control" disabled="disabled" style="background-color: lightgray; color: black;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" style="background-color: lightgray; color: black;" />
            </div>
        </div>
    </div>
</form>