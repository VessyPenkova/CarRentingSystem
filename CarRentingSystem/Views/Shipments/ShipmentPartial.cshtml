@model ShipmentServiceModel

@inject IShipmentService shipment
@inject IDriverService driver

<div class="col-md-4" style=" background-color: #09223c; color: #ffd500;">
    <div class="card mb-3" style="background-color: #09223c; color: #ffd500;">
        <img class="card-img-top" src="@Model.ImageUrlShipmentGoogleMaps" alt="Shipment Route" style="background-color: #09223c; color: #ffd500;">
        <div class="card-body text-center" style="background-color: #09223c; color: #ffd500;">
            <h4>@Model.Title</h4>
            <h6>Address: <b>@Model.LoadingAddress</b></h6>
            <h6>Address: <b>@Model.DeliveryAddress</b></h6>
            <h6>
                Price:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <h6>(@(Model.IsRented ? "Rented" : "Not Rented"))</h6>
            <br />
            <a asp-area="" asp-controller="Shipments" style="background-color: #09223c; color: #ffd500;" asp-action="Details" asp-Shipment-id="@Model.Id"
               asp-route-information="@Model.GetInformation()" class="btn btn-success" style="background-color: #09223c; color: #ffd500;">Details</a>
            @if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="Shipments" style="background-color: #09223c; color: #ffd500;" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning" style="background-color: #09223c; color: #ffd500;">Edit</a>
                <a asp-area="" asp-controller="Shipments" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger" style="background-color: #09223c; color: #ffd500;">Delete</a>
                <p></p>
                @if (!Model.IsRented)
                {
                    <form class="input-group-sm" asp-area="" style="background-color: #09223c; color: #ffd500;" asp-controller="Shipments"
                          asp-action="Rent" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary" type="submit" value="Rent" style="background-color: #09223c; color: #ffd500;;" />
                    </form>
                }
                else
                {
                    <form asp-area="" asp-controller="Shipments" style="background-color: #09223c; color: #ffd500;" asp-action="Leave"
                          asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary" type="submit" value="Leave" style="background-color: #09223c; color: #ffd500;" />
                    </form>
                }
            }
        </div>
    </div>
</div>