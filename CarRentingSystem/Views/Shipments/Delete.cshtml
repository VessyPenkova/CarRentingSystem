@model CarRentingSystem.Models.Shipments.ShipmentDetailsViewModel
@{
    ViewBag.Title = "Delete Shipment";
}

<h2 class="text-center" style="background-color:#09223c;color:#ffd500;">@ViewBag.Title</h2>
<hr />

<div class="row" style="background-color:#09223c;color:#ffd500;">
    <div class="col-md-6">
        <img class="img-fluid" src="@Model.ImageUrlShipmentGoogleMapsUrl" alt="@Model.Title" />
    </div>
    <div class="col-md-6">
        <h4>@Model.Title</h4>
        <p><strong>From:</strong> @Model.LoadingAddress</p>
        <p><strong>To:</strong> @Model.DeliveryAddress</p>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
