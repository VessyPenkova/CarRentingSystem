@model ShipmentDetailsServiceModel

@{
    ViewBag.Title = "Delete Shipment";
}

<h2 class="text-center" style="background-color: #09223c; color: #ffd500;" ">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-4 style="background-color: #09223c; color: #ffd500;">
            <img class="card-img-top" src="@Model.ImageUrlShipmentGoogleMaps" alt="Shipment Image">
        </div>
        <div class="col-md-8"style=" background-color: #09223c; color: #ffd500;">
            <div class="form-group style=" background-color: #09223c; color: #ffd500;"" style="background-color: #09223c; color: #ffd500;">
                <label asp-for="Title" class="control-label" style="color: yellow;"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" style="background-color: #09223c; color: #ffd500;"/>
            </div>
            <div class="form-group" style="background-color: #09223c; color: #ffd500;">
                <label asp-for="LoadingAddress" class="control-label" style="color: yellow;"></label>
                <input asp-for="LoadingAddress" class="form-control" disabled="disabled" style="background-color: #09223c; color: #ffd500;"/>
            </div>
            <div class="form-group" style="background-color: #09223c; color: #ffd500;">
                <label asp-for="DeliveryAddress" class="control-label" style="color: yellow;"></label>
                <input asp-for="DeliveryAddress" class="form-control" disabled="disabled" style="background-color: #09223c; color: #ffd500;"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" style="background-color: #09223c; color: #ffd500;"/>
            </div>
        </div>
    </div>
</form>