
@model ShipmentFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="background-color: #09223c; color: #ffd500;">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title..." style="background-color: lightgray; color: black;">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoadingAddress"></label>
                <input asp-for="LoadingAddress" class="form-control" placeholder="PickUpAddress..." style="background-color: lightgray; color: black;">
                <span asp-validation-for="LoadingAddress" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryAddress"></label>
                <input asp-for="DeliveryAddress" class="form-control" placeholder="DeliveryAddress..." style="background-color: lightgray; color: black;">
                <span asp-validation-for="DeliveryAddress" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Luxury or .." style="background-color: lightgray; color: black;"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrlShipmentGoogleMaps"></label>
                <input asp-for="ImageUrlShipmentGoogleMaps" class="form-control" placeholder="Your fine.." style="background-color: lightgray; color: black;">
                <span asp-validation-for="ImageUrlShipmentGoogleMaps" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" style="background-color: lightgray; color: black;">
                    @foreach (var category in Model.ShipmentCategories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" style="background-color: lightgray; color: black;">
            </div>
        </form>
    </div>
</div>
