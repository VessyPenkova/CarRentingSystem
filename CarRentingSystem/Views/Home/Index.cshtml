@model IEnumerable<ShipmentIndexServiceModel>
@inject IDriverService driverService

@{
    ViewData["Title"] = "Home Page";
    bool first = true;
    var shipments = Model.ToList();
}

@if (Model.Count() == 0)
{
    <div class="mt-4 p-5" style="background-color: #09223c; color: #ffd500;">
        <h1 class="display-4" style"= color: #ffd500;">Welcome to the best place for renting car!</h1>
        <p class="lead" style="background-color: #09223c; color: #ffd500;">
            There are no cars or routes in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4" style="background-color: #09223c; color: #ffd500;">
        <p class="lead">
            @if (this.User?.Identity != null && this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Shipments" asp-action="Add" class="btn btn-primary style=" background-color: #09223c; color: #ffd500;"
                   role="button">Add Shipment</a>
            }
        </p>
    </div>
}

<div class="mb-5" style="background-color: #09223c; color: #ffd500;"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < shipments.Count(); i++)
        {
            var shipment = shipments[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@shipment.ImageUrlShipmentGoogleMaps" alt="@shipment.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Shipments" style="background-color: #09223c; color: #ffd500;" asp-action="Details"
                           asp-route-id="@shipment.ShipmentId"
                           asp-route-information="@shipment.GetInformation()"> @shipment.Title</a>
                    </h5>
                </div>
            </div>
            first = false;
        }
    </div>
    <button class="carousel-control-prev" type="button" style="background-color: #09223c; color: #ffd500;" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" style="background-color: #09223c; color: #ffd500;" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" style="background-color: #09223c; color: #ffd500;" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" style="background-color: #09223c; color: #ffd500;"  aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

</div>
<div class="mb-5" style="background-color: #09223c; color: #ffd500;"></div>
<div class="row">
    <div class="col-12 text-center" style="background-color: #09223c; color: #ffd500;">
        <button class="btn btn-primary" id="statistics-button" style="background-color: #09223c; color: #ffd500;">Show Statistics</button>
    </div>
</div>

<div class="mt-4 p-5" style="background-color: #09223c; color: #ffd500;" id="statistics">
    <div class="row">
        <h2 class="col-md-6 text-center"style="background-color: #09223c; color: #ffd500;"  id="total-shipments"></h2>
        <h2 class="col-md-6 text-center"style="background-color: #09223c; color: #ffd500;"  id="total-rents"></h2>
    </div>
</div>

@section Scripts {
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('https://localhost:7035/api/statistics', (data) => {
                $('#total-Shipments').text(data.Shipments + " Shipments");
                $('#total-rents').text(data.totalRents + " Rents");
                $('#statistics')..removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>
}